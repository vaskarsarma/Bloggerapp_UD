<div class="row">
    <div class="my-container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-2 col-md-2">
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <div class="well bs-component">
                    <div class="form-horizontal">
                        <fieldset>
                            <legend>Change Password</legend>
                            <div class="alert alert-dismissible alert-success successPanel hidden">
                            </div>
                            <div class="alert alert-dismissible alert-danger ErrorPanel hidden">
                            </div>
                            {{#if user}}
                            <div class="changepwd">
                                <div class="form-group">
                                    <label for="inputPassword" class="col-lg-2 control-label">Current Password</label>
                                    <div class="col-lg-10">
                                        <div class="input-group">
                                            <spna class="input-group-addon input-sm">
                                                <span class="glyphicon glyphicon-lock"></span>
                                            </spna>
                                            <input type="password" class="form-control input-sm" data-id="{{user._id}}" id="CuPassword" placeholder="Password">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-lg-2 control-label">New Password</label>
                                    <div class="col-lg-10">
                                        <div class="input-group">
                                            <spna class="input-group-addon input-sm">
                                                <span class="glyphicon glyphicon-lock"></span>
                                            </spna>
                                            <input type="password" class="form-control input-sm" id="NPassword" placeholder="Password">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-lg-2 control-label">Confirm Password</label>
                                    <div class="col-lg-10">
                                        <div class="input-group">
                                            <spna class="input-group-addon input-sm">
                                                <span class="glyphicon glyphicon-lock"></span>
                                            </spna>
                                            <input type="password" class="form-control input-sm" id="CoPassword" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-10 col-lg-offset-2">
                                        <button type="reset" class="btn btn-default btn-sm cancel">
                                            <a href="/">Cancel</a>
                                        </button>
                                        <button type="submit" class="btn btn-info btn-sm cpwdBtn">Submit</button>
                                    </div>
                                </div>
                            </div>
                            {{else}}
                            <div class="alert alert-dismissible alert-danger">
                                Invalid Request
                            </div>
                            {{/if}}
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2">
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/changepwd.js"></script>