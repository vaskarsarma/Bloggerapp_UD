<div class="row">
    <div class="my-container">
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            {{#if blog}}

            <div class="blog-pager" id="blog-pager">
                {{#Compare blog.prevblogid "!==" "0"}}
                <span id="blog-pager-newer-link">
                    <a class="blog-pager-newer-link" href="/viewblog/showdetails/{{blog.prevblogid}}" id="Blog1_blog-pager-newer-link" title="Newer Post">
                        <h4 class="previousLink">
                            <b>← Previous Story</b>
                        </h4>
                        <h3></h3>
                        <h3></h3>
                    </a>
                </span>
                {{/Compare}} {{#Compare blog.nextblogid "!==" "0"}}
                <span id="blog-pager-older-link">
                    <a class="blog-pager-older-link" href="/viewblog/showdetails/{{blog.nextblogid}}" id="Blog1_blog-pager-older-link" title="Older Post">
                        <h4 class="nextLink">
                            <b>Next Story →</b>
                        </h4>
                        <h3></h3>
                    </a>
                </span>
                {{/Compare}}
            </div>

            <div class="blog-panel">
                <h2>{{{blog.topic}}}</h2>
                {{!-- <h5>By {{#Compare user._id "==" blog.userid}}
                    <a href="/myprofile/{{blog.userid}}">{{blog.createdby}}</a>
                    {{else}} {{blog.createdby}} {{/Compare}} | {{#CovertISODate blog.creationdate}}{{/CovertISODate}}
                </h5> --}}
                <span>{{{blog.content}}}</span>
            </div>

            <div class="blog-pager" id="blog-pager">
                {{#Compare blog.prevblogid "!==" "0"}}
                <span id="blog-pager-newer-link">
                    <a class="blog-pager-newer-link" href="/viewblog/showdetails/{{blog.prevblogid}}" id="Blog1_blog-pager-newer-link" title="Newer Post">
                        <h4 class="previousLink">
                            <b>← Previous Story</b>
                        </h4>
                        <h3></h3>
                        <h3></h3>
                    </a>
                </span>
                {{/Compare}} {{#Compare blog.nextblogid "!==" "0"}}
                <span id="blog-pager-older-link">
                    <a class="blog-pager-older-link" href="/viewblog/showdetails/{{blog.nextblogid}}" id="Blog1_blog-pager-older-link" title="Older Post">
                        <h4 class="nextLink">
                            <b>Next Story →</b>
                        </h4>
                        <h3></h3>
                    </a>
                </span>
                {{/Compare}}
            </div>
            
            <hr>
            <!-- Blog Comments - Comments Form -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5 class="panel-title">
                        <strong>Leave a Comment</strong>
                    </h5>
                </div>
                <div class="list-group panel-body">

                    {{#if user}}
                    <div class="blogcommentvalidationpanel hidden">
                    </div>
                    <div class="blogcommentsection">
                        <form id="blogcommentfrm">
                            <div class="form-group">
                                <textarea class="form-control" rows="4" name="blogcomment" id="blogcomment" required="required"></textarea>
                                <input type="hidden" value="{{blog._id}}" name="blogid" id="blogid" />
                                <input type="hidden" value="{{blog.topic}}" name="blogtopic" id="blogtopic" />
                                <input type="hidden" id="uname" name="uname" value="{{user.username}}" />
                                <input type="hidden" id="userid" name="userid" value="{{user._id}}" />
                            </div>
                            <button type="button" class="btn btn-info btn-sm addblogcomment">Submit</button>
                        </form>
                    </div>
                    {{else}} Please
                    <span id="modal-846899" href="#modal-container-846899" role="button" data-toggle="modal">
                        <a class="signinlink" href="#">sign-in!!</a>
                    </span>
                     or  <a class="signuplink" href="/auth/userRegistration">sign-up!!</a>
                    {{/if}}
                </div>
            </div>

            <hr>
            <!-- Posted Comments -->
            <div class="commentpanel">
                {{#if comments}} {{#Compare comments.count ">" 0}} {{#each comments.result}}

                <div class="panel panel-default">
                    {{!-- <div class="panel-body">
                        {{this.comment}}
                    </div>
                    <div class="panel-footer text-right">by
                        <i>
                            {{#Compare ../user._id "==" this.userid}}
                            <a href="/myprofile/{{this.userid}}">{{this.username}}</a>
                            {{else}} {{this.username}} {{/Compare}}
                            <span class="glyphicon glyphicon-time"></span> Posted on {{#CovertISODate this.creationdate}}{{/CovertISODate}}</i>
                    </div> --}}
                    <div class="avatar-image-container">
                        <img class="avatarImage" src="/{{this.userid}}/{{this.userid}}.jpg">
                    </div>
                    <div class="comment-block">
                        <div id="bc_0_3M" class="comment-header" kind="m">
                            <cite class="user">
                                {{#Compare ../user._id "==" this.userid}}
                                <a class="citaUser" rel="nofollow" href="/myprofile/{{this.userid}}">{{this.username}}</a>
                                 {{else}} {{this.username}} {{/Compare}}
                            </cite>                        
                            <span class="datetime secondary-text">    
                                 <span class="glyphicon glyphicon-time"></span>                            
                                {{#ShowDate this.creationdate}}{{/ShowDate}}
                            </span>
                        </div>
                        <p id="bc_0_3MC" class="comment-content">{{this.comment}}</p>
                    </div>
                </div>
                {{/each}} {{/Compare}}{{/if}}
            </div>

            {{!-- <div id="divCommentImage" data-blogid="{{blog._id}}" data-lastcommentid="{{lastCommentId}}">
                <span id="loadmorecommentbyblogid" name="loadmorecommentbyblogid" alt="Load More" class="glyphicon glyphicon-hand-down"></span>
            </div> --}}
            <div id="divCommentImage" class="divLoadMore" data-blogid="{{blog._id}}" data-lastcommentid="{{lastCommentId}}">
                {{!-- <span id="loadmoreblog" name="loadmoreblog" alt="Load More" class="glyphicon glyphicon-hand-down"></span> --}}
                <span class="loadmore">load more</span>
            </div>
            {{/if}}
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">        
            <div class="bloggerInfo viewBlogCart-first">
                <h2 class="headertext">
                    <span>About me</span>
                </h2>
                <div class="widget-content">
                    <div class="textwidget">
                        <p>
                            <img class="img-responsive imgPostImage" max-width="300" src="/{{blog.userid}}/{{blog.userid}}.jpg" >
                        </p>
                        <p>I'm <strong>{{blog.createdby}}</strong> {{{blog.aboutauthor}}}</p>
                    </div>
                </div>       
              <div class="clear"></div>
            </div>

            <div class="social-networks viewBlogCart hidden" >
                <h2 class="headertext">
                    <span>Follow Us</span>
                </h2>
                <div class="widget-content">
                    <ul class="site-social-networks secondary-2-primary style-default show-title">
                        <li>
                            <a href="#" class="facebook" target="_blank" title="Facebook">
                                <i class="fa fa-facebook"></i>Facebook</a>
                        </li>
                        <li>
                            <a href="#" class="twitter" target="_blank" title="Twitter">
                                <i class="fa fa-twitter"></i>Twitter</a>
                        </li>
                        <li>
                            <a href="#" class="instagram" target="_blank" title="Instagram">
                                <i class="fa fa-instagram"></i>Instagram</a>
                        </li>
                        <li>
                            <a href="#" class="pinterest" target="_blank" title="Pinterest">
                                <i class="fa fa-pinterest"></i>Pinterest</a>
                        </li>
                        <li>
                            <a href="#" class="bloglovin" target="_blank" title="Bloglovin">
                                <i class="fa fa-heart"></i>Bloglovin</a>
                        </li>
                        <li>
                            <a href="#" class="youtube" target="_blank" title="Youtube">
                                <i class="fa fa-youtube-play"></i>Youtube</a>
                        </li>
                    </ul>
                </div>
                <div class="clear"></div>     
            </div>        

            <div class="viewBlogCart categories">
                <h2 class="headertext">
                    <span>CATEGORIES</span>
                </h2>
                <div class="widget-content cloud-label-widget-content">
                    {{#each category}}
                    <span class="label-size ">
                        <a class="categoryLabel" data-key="{{this.key}}" href="/listblog/{{this.key}}">{{this.name}}</a>
                    </span>
                    {{/each}}
                </div>
                <div class="clear"></div>
            </div>
            <!-- Top Visited Side Widget Well -->
            {{#if topvisit}} {{> topvisitblogs topvisit=topvisit }} {{/if}}
        
            <!-- Top Visited Side Widget Well -->
            {{#if mostrecentblogs}} {{> recentblogs mostrecentblogs=mostrecentblogs }} {{/if}}
        </div>
    </div>
</div>
<link href="/css/blogs.css" rel="stylesheet" />
<script src="/js/blogs.js"></script>